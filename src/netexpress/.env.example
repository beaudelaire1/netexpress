DEBUG=False
DJANGO_SETTINGS_MODULE=netexpress.settings.prod
SECRET_KEY=change-me
ALLOWED_HOSTS=127.0.0.1,localhost,netexpress-web.onrender.com

# SQLite local par défaut. Si Postgres:
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# ---------------------------------------------------------------------------
# Configuration E-mail
# ---------------------------------------------------------------------------
# Choisir le type de backend : "smtp" (par défaut) ou "brevo"
EMAIL_BACKEND_TYPE=smtp

# Option 1 : Configuration SMTP (Gmail, Zoho, etc.)
# Utilisée si EMAIL_BACKEND_TYPE=smtp (ou non défini)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your-email@example.com
CONTACT_RECEIVER_EMAIL=your-email@example.com
TASK_NOTIFICATION_EMAIL=your-email@example.com

# Option 2 : Configuration Brevo API (ancien Sendinblue)
# Utilisée si EMAIL_BACKEND_TYPE=brevo
# Obtenez votre clé API sur : https://app.brevo.com/settings/keys/api
# BREVO_API_KEY=votre-cle-api-brevo-ici
