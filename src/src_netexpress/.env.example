# =============================================================================
# Configuration NetExpress - Fichier d'exemple
# =============================================================================
# IMPORTANT: Copiez ce fichier vers .env et remplissez vos propres valeurs
# NE JAMAIS commiter le fichier .env avec vos secrets!
# =============================================================================

# Mode debug (mettre à False en production!)
DEBUG=True

# Clé secrète Django - GÉNÉRER UNE NOUVELLE CLÉ POUR LA PRODUCTION
# Utilisez: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-generate-a-real-secret-key
DJANGO_SECRET_KEY=change-me-generate-a-real-secret-key

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=127.0.0.1,localhost

# Fuseau horaire et langue
TIME_ZONE=America/Martinique
LANGUAGE_CODE=fr-fr

# Module de settings Django
DJANGO_SETTINGS_MODULE=netexpress.settings.dev

# URL du site (pour les liens dans les emails)
SITE_URL=http://localhost:8000

# =============================================================================
# Base de données
# =============================================================================
# Laisser vide pour SQLite en développement
# En production, utilisez PostgreSQL:
# DATABASE_URL=postgres://user:password@host:5432/netexpress

# =============================================================================
# Configuration Email SMTP
# =============================================================================
# Backend email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Serveur SMTP
EMAIL_HOST=smtp.gmail.com

# Port SMTP: 587 pour TLS (recommandé), 465 pour SSL
EMAIL_PORT=587

# Sécurité: TLS (port 587) ou SSL (port 465)
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Identifiants SMTP (utiliser un "App Password" pour Gmail)
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-app-password-gmail

# Expéditeur par défaut
DEFAULT_FROM_EMAIL="Nettoyage Express <votre-email@gmail.com>"

# Destinataires des notifications
CONTACT_RECEIVER_EMAIL=votre-email@gmail.com
TASK_NOTIFICATION_EMAIL=votre-email@gmail.com

# =============================================================================
# Celery (optionnel - pour emails asynchrones)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
