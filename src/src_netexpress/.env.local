# Configuration pour le développement local
DJANGO_SETTINGS_MODULE=netexpress.settings.dev
DJANGO_SECRET_KEY=dev-secret-key-not-for-production-use-only

# Base de données (SQLite pour le développement)
# Pas besoin de DATABASE_URL, SQLite est configuré par défaut
DATABASE_URL=

# Email (Brevo API pour les tests et production)
EMAIL_BACKEND=core.backends.brevo_backend.BrevoEmailBackend
BREVO_API_KEY=your-brevo-api-key-here
DEFAULT_FROM_EMAIL=contact@nettoyageexpresse.fr
DEFAULT_FROM_NAME=Nettoyage Express

# Debug
DEBUG=True