# =============================================================================
# CONFIGURATION NETEXPRESS - Mini ERP
# =============================================================================
# Copiez ce fichier vers .env et remplissez les valeurs
# IMPORTANT: .env ne doit JAMAIS être commité dans Git!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------

# Clé secrète Django (minimum 50 caractères)
# Générer avec: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Ou sur: https://djecrety.ir/
DJANGO_SECRET_KEY=votre-cle-secrete-de-50-caracteres-minimum-a-generer

# Mode debug (True en dev, False en production)
DJANGO_DEBUG=True

# Hosts autorisés (séparés par des virgules)
# Exemple prod: votre-domaine.com,www.votre-domaine.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# URL publique du site (pour emails, liens CTA, etc.)
SITE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Base de données
# -----------------------------------------------------------------------------

# PostgreSQL (RECOMMANDÉ pour production)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://netexpress_user:password@localhost:5432/netexpress_db

# SQLite (développement uniquement)
# DATABASE_URL=sqlite:///db.sqlite3

# -----------------------------------------------------------------------------
# Email / SMTP
# -----------------------------------------------------------------------------

# Backend email (smtp en production, console en dev)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Serveur SMTP
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Credentials SMTP
EMAIL_HOST_USER=contact@votre-domaine.com
EMAIL_HOST_PASSWORD=votre_mot_de_passe_smtp

# Email par défaut pour envois
DEFAULT_FROM_EMAIL=contact@votre-domaine.com

# Email pour notifications admin/tâches
TASK_NOTIFICATION_EMAIL=admin@votre-domaine.com

# Email pour notifications devis
NETEXPRESS_DEVIS_NOTIFICATION=commercial@votre-domaine.com

# -----------------------------------------------------------------------------
# Celery / Redis (tâches asynchrones)
# -----------------------------------------------------------------------------

# URL du broker Redis pour Celery
CELERY_BROKER_URL=redis://localhost:6379/0

# Backend résultats Celery (optionnel, utilise broker par défaut)
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Mode synchrone en dev (pas besoin de Redis/Celery worker)
CELERY_TASK_ALWAYS_EAGER=False

# -----------------------------------------------------------------------------
# Monitoring & Logs (optionnel)
# -----------------------------------------------------------------------------

# Sentry DSN pour monitoring erreurs
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Environnement (dev, staging, production)
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Stockage fichiers (optionnel)
# -----------------------------------------------------------------------------

# AWS S3 pour fichiers media en production (optionnel)
# AWS_STORAGE_BUCKET_NAME=netexpress-media
# AWS_S3_REGION_NAME=eu-west-1
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_S3_CUSTOM_DOMAIN=cdn.votre-domaine.com

# -----------------------------------------------------------------------------
# Sécurité Production (uniquement si DEBUG=False)
# -----------------------------------------------------------------------------

# Certificat SSL/TLS actif
SECURE_SSL_REDIRECT=True

# HSTS (HTTPS Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# Branding (optionnel - valeurs par défaut dans settings)
# -----------------------------------------------------------------------------

# Nom de l'entreprise
# COMPANY_NAME=Nettoyage Express

# Email entreprise
# COMPANY_EMAIL=contact@nettoyage-express.gf

# Téléphone entreprise
# COMPANY_PHONE=05 94 30 23 68

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Production:
#    - DJANGO_DEBUG=False
#    - DATABASE_URL avec PostgreSQL
#    - EMAIL_BACKEND=smtp
#    - CELERY_TASK_ALWAYS_EAGER=False
#    - Configurer SENTRY_DSN
#
# 2. Développement:
#    - DJANGO_DEBUG=True
#    - DATABASE_URL avec SQLite (ou PostgreSQL local)
#    - EMAIL_BACKEND=console (ou Mailtrap)
#    - CELERY_TASK_ALWAYS_EAGER=True
#
# 3. Sécurité:
#    - .env doit être dans .gitignore
#    - DJANGO_SECRET_KEY unique par environnement
#    - Ne jamais commiter de credentials
#
# =============================================================================
